{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block main %}
<div class="dashboard--table">
  {{ form_start(filters) }}
  <div class="form-group">
    <div class="row w-100">
      <div class="col">
        {{ form_label(filters.group) }}
        {{ form_widget(filters.group) }}
      </div>
      <div class="col">
        {{ form_label(filters.subowner) }}
        {{ form_widget(filters.subowner) }}
      </div>
      <div class="col">
        {{ form_label(filters.theme) }}
        {{ form_widget(filters.theme) }}
      </div>
      <div class="col">
        {{ form_label(filters.category) }}
        {{ form_widget(filters.category) }}
      </div>
      <div class="col-4">
        {{ form_label(filters.search) }}
        {{ form_widget(filters.search) }}
      </div>
    </div>
  </div>
  {{ form_end(filters) }}

  <table class="table table-bordered table-striped table-sm">
    <thead class="">
    <th></th>
    {% for item in paginator %}
      <th class="rotate">
        <div>
          <span>
            <a href="{{ path('easyadmin', { action: 'show', id: item.id, entity: entityType|capitalize }) }}" title="{{ item.showableName }}">
              {{ breakintolines(item.showableName, 35, 2) | raw }}
            </a>
          </span>
        </div>
      </th>
    {% endfor %}
      <th class="table-right-column"> </th>
    </thead>
    <tbody>
    {% if categories|length > 0 %}
      {% for category in categories %}
      <tr>
        <td><h3><strong>{{ category.name }}</strong></h3></td>
        {% for result in paginator %}
        <td> </td>
        {% endfor %}
        <td class="table-right-column"> </td>
      </tr>
      {% for question in (category.questions)|sort_order %}
        <tr>
          <td>{{ question.question }}</td>
          {% for result in paginator %}
            <td class="dashboard--table-answer">
              <div class="dashboard--table-cell">
              {% set answer = getanswer(result, question) %}
              {% if answer is not null %}
                {% include 'easy_admin_overrides/field_smiley.html.twig' with { 'value': answer.smiley, 'title': answer.note, 'width': 30 } %}
              {% endif %}
              </div>
            </td>
          {% endfor %}
          <td class="table-right-column"> </td>
        </tr>
      {% endfor %}
      {% if not loop.last %}
      <tr>
        <td class="dashboard--table-spacing" colspan="{{ (paginator|length) + 2 }}">&nbsp;</td>
      </tr>
      {% endif %}
    {% endfor %}
    {% else %}
      <tr>
        <td colspan="100%">
          <div>{{ 'dashboard.no_categories_for_result' | trans }}</div>
        </td>
      </tr>
    {% endif %}
    </tbody>
  </table>

  <div class="pagination mt-3">
    {{ knp_pagination_render(paginator) }}
  </div>
</div>
{% endblock main %}

{% block body_javascript %}
  <script type="text/javascript">
    $('.dashboard--table select').bind('change', function () {
      $('.dashboard--table form').submit();
    });
  </script>
{% endblock %}
