{% set alphabet = ['A','B','C','D','E','F','G','H','I','J','K','L','M','N','O','P','Q','R'] %}
{% set numberOfCategories = 0 %}
{% if value and value.categories %}
  {% for category in value.categories %}
    {% set numberOfCategories = numberOfCategories + 1 %}
    <h2>{{ category.name }}</h2>
    <table>
      <thead>
      <tr>
        <th>ID</th>
        <th>Spørgsmål</th>
        <th>Smiley</th>
        <th>Actions</th>
      </tr>
      </thead>
      {% set numberOfQuestions = 0 %}
      {% for question in category.questions %}
        {% set numberOfQuestions = numberOfQuestions + 1 %}
        <tr>
          <td>{{ alphabet[numberOfCategories - 1] }}{{ numberOfQuestions }}</td>
          <td>
            <a href="?entity=Question&id={{ question.id }}&action=show">{{ question.question }}</a>
          </td>
          {% set numberOfAnswers = 0 %}

          {% for answer in question.answers %}
            {% if answer in item.answers %}
              <td>
                {% include 'easy_admin_overrides/field_smiley.html.twig' with { 'value': answer.smiley } %}
              </td>
            {% endif %}
            {% if answer in item.answers %}
              {% set numberOfAnswers = numberOfAnswers + 1 %}
              <td>
                <a href="?entity=Answer&id={{ answer.id }}&action=edit&referer=%252F%253Fentity%253DReport%2526action%253Dshow%2526id%253D{{ item.id }}">
                  {{ 'entity.report.answers_remarks' | trans }}
                </a>
              </td>
            {% endif %}
          {% endfor %}
          {% if numberOfAnswers == 0 %}
            <td></td>
            <td>
              <a href="answer/new?question={{ question.id }}&report={{ item.id }}&referer=%252F%253Fentity%253DReport%2526action%253Dshow%2526id%253D{{ item.id }}">
                {{ 'entity.report.answers_remarks_create' | trans }}
              </a>
            </td>
          {% endif %}
          </td>
        </tr>
      {% endfor %}
    </table>
    <style>
      table {
        width: 100%;
      }

      td, th {
        border: 1px solid #2A3CA2;
        padding: 1em;
      }
    </style>
    <br><br>
  {% endfor %}
{% endif %}
